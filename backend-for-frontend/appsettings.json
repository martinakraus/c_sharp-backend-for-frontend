{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OAuth": {
    "Authority": "http://keycloak:8080/realms/bff-realm",
    "ClientId": "bff-client",
    "ClientSecret": "bff-secret",
    "Scopes": [
      "openid",
      "profile",
      "email"
    ],
    "RedirectUri": "http://localhost:3000/auth/callback",
    "PostLogoutRedirectUri": "http://localhost:4200/"
  },
  "ApiProxy": {
    "ApiBaseUrl": "http://localhost:4000"
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://api:4000"
          }
        }
      }
    }
  }
}
